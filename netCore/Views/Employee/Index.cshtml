@model IEnumerable<netCore.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Nhân viên</h1>

<p>
    <a asp-action="Create">thêm</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeID">chỉnh sửa</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeID">chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeID">xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
